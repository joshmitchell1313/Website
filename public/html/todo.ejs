    <body>
        <div id ="main-banner">
            <button><a href = '/'>Back to homepage</a></button>
            <h1>A To-Do List</h1>
            <h4>Add items that you want to get done here :)</h4>
        </div>

        <div id ="todo-table">
            <form>
                <% if (todos.length <= 4) {%>
                    <input type="text" name="item" placeholder="Add new item to the to do list..." required />
                    <button type="submit">Add Item</button>
                <% }else { %>
                    <input type="text" name="item" placeholder="Your list should not be more than 5 items... remember to focus on a few items to not burn out" required />
                <% } %>
            </form>
            <ul>
                <% for(var i = 0; i < todos.length; i++){ %>
                    <li><%= todos[i].item %></li>
                <% } %>
            </ul>
        </div>
